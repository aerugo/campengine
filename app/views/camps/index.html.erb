<%= link_to "New Creation", new_camp_path %>

<div class="camps_list">
  <% @camps.each do |camp| %>
  <a href="<%= url_for(camp) %>">
    <div class="camp_card">
      <div class="camp_card-img"></div>
      <% id = camp.id %>
      <h1><%= truncate(camp.name, length: 50) %></h1>
      <span class="camp_card-desc"><%= truncate(camp.description, length: 100) %></span>
    </div>
  </a>
  <% end %>
</div>
