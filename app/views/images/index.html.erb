<h2 class="header-sub-heading">Creation images</h2>

<% @images.each do |image| %>
  <% image_path = camp_image_path(camp_id: @camp_id, id: image.id) %>
  <%= image_tag(image_path) %>
  <%= form_for image, url: image_path,  method: :delete do |form| %>
    <%= form.submit 'Remove image' %>
  <% end %>
<% end %>

<h2 class="header-sub-heading">Upload images</h2>

<%= form_tag camp_images_path(camp_id: @camp_id), method: :post, multipart: true do %>
  <%= label_tag :image, 'Upload image' %>
  <%= file_field_tag :image %>
  <%= submit_tag 'Upload image' %>
<% end %>
